<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">55dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/pix_16dp</item>
        <item name="android:paddingRight">@dimen/pix_16dp</item>
        <item name="android:textSize">@dimen/font_x_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/default_active_btn</item>
    </style>

    <style name="btn_style.inactive">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:background">@drawable/default_inactive_btn</item>
    </style>
    <style name="edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="text_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_grey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/lt_grey</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/pix_8dp</item>
    </style>

    <style name="textInputStyle">
        <item name="boxBackgroundColor">@null</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="edit_text_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>