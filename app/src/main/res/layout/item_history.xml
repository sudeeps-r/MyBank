<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.app.mybank.ui.home.service.HistoryViewResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/pix_8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_bold"
            android:layout_width="0dp"
            android:text="@{data.received ? data.response.from.name : data.response.receiver.name}"
            android:textSize="@dimen/font_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="fdsfdsdsds" />

        <TextView
            android:id="@+id/tv_accnt"
            style="@style/text_bold"
            android:layout_width="0dp"
            android:textColor="@color/lt_grey"
            android:text="@{data.received ? data.response.from.accntNo : data.response.receiver.accntNo}"
            android:textSize="@dimen/font_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="fdsfdsdsds" />

        <TextView
            android:id="@+id/tv_amnt"
            style="@style/text_bold"
            android:text="@{data.currency}"
            android:textColor="@{data.received ? @color/green : @color/red}"
            android:textSize="@dimen/font_medium"
            app:layout_constraintBottom_toBottomOf="@id/tv_accnt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>