<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.mybank">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MyBankApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_img"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBank.NoActionBar">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.transfer.TransferActivity"
            android:label="@string/m_transfer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:label="@string/m_sign_up"
            android:screenOrientation="portrait" />
    </application>

</manifest>